<?xml version="1.0"?>
<config>
    <modules>
        <LCB_Security>
            <version>1.0.0</version>
        </LCB_Security>
    </modules>

    <global>

        <helpers>
            <lcb_security>
                <class>LCB_Security_Helper</class>
            </lcb_security>
        </helpers>

        <models>
            <lcb_security>
                <class>LCB_Security_Model</class>
                <resourceModel>lcb_security_resource</resourceModel>
            </lcb_security>
            <lcb_security_resource>
                <class>LCB_Security_Model_Resource</class>
                <entities>
                    <post_request>
                        <table>lcb_security_post_request</table>
                    </post_request>
                </entities>
            </lcb_security_resource>
        </models>

        <resources>
            <lcb_security_setup>
                <setup>
                    <module>LCB_Security</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </lcb_security_setup>

            <lcb_security_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </lcb_security_read>

            <lcb_security_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </lcb_security_write>
        </resources>
    </global>

    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <lcb_security_post_request_limiter>
                        <class>lcb_security/observer</class>
                        <method>checkPostFlood</method>
                    </lcb_security_post_request_limiter>
                </observers>
            </controller_action_predispatch>
        </events>
    </frontend>
</config>
